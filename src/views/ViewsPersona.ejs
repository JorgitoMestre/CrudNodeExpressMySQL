<div class="container">
  <div class="row mt-5">
    <div class="col-md-7">
       <table class="table table-bordered table-hover">
         <thead>
           <tr>
             <th>No.</th>
             <th>Nombre</th>
             <th>Edad</th>
             <th>Acci√≥n</th>
           </tr>
         </thead>
         <tbody>
           <% if(data){ %>
             <% for(var i=0; i< data.length; i++) { %>
               <tr>
                 <td><%= (i+1) %></td>
                 <td><%= data[i].nombre %></td>
                 <td><%= data[i].edad %></td>
                 <td>
                   <a href="/eliminar/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                   <a href="/actualizar/<%= data[i].id %>" class="btn btn-info">Actualizar</a>
                 </td>
               </tr>
             <% } %>

           <% } %>
         </tbody>
       </table>
    </div>
    <div class="col-md-5">
       <div class="card">
         <div class="card-body">
           <form class="/insertar"  method="post">
             <div class="form-group">
               <input type="text" name="nombrePersona" placeholder="Nombre" class="form-control">
             </div>
             <div class="form-group">
               <input type="number" name="edadPersona" placeholder="Edad" class="form-control">
             </div>
             <button type="submit" name="Insertar" class="btn btn-primary">INSERTAR</button>
           </form>
         </div>
       </div>

    </div>
